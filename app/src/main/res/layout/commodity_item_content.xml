<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commodity_item_content"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal"
    android:background="#a9daf4">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/commodity_item_content_serial_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1"
            android:textColor="#a932f1"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="2"
        >

        <TextView
            android:id="@+id/commodity_item_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品名称"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/commodity_item_content_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="单位"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/commodity_item_content_dingliang"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        >

        <EditText
            android:id="@+id/commodity_item_content_dingliang_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#FFFDFBFB"
            android:enabled="false"
            android:textColor="#000"
            android:textSize="15sp"
            android:inputType="number|numberDecimal|numberSigned"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/commodity_item_content_actualnum"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        >

        <EditText
            android:id="@+id/commodity_item_content_actualnum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#FFFDFBFB"
            android:textColor="#000"
            android:textSize="15sp"
            android:inputType="number|numberDecimal|numberSigned"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/commodity_item_content_price"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        >

        <EditText
            android:id="@+id/commodity_item_content_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#FFFDFBFB"
            android:textColor="#000"
            android:textSize="15sp"
            android:inputType="number|numberDecimal"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/commodity_item_content_select"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        >

        <CheckBox
            android:id="@+id/commodity_item_content_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>


</LinearLayout>