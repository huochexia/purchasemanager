<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_commodity_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/commodity_name"
            android:textSize="20sp"
            android:layout_marginRight="10dp"/>
        <!--输入商品单位的文本框-->
        <EditText
            android:id="@+id/add_commodity_form_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品名称"
            android:textSize="18sp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/commodity_unit"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            />
        <!--输入商品单位的下拉列表-->
        <Spinner
            android:id="@+id/add_commodity_form_unit_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="18sp"/>
    </TableRow>

</TableLayout>